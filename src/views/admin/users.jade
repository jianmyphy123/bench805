extends ../layout

block content

  .page_body.padding_top_header

    section.result_table_section
      .padding_lr.stretch.clrfx
        .users_responsive_table.tabs.mobile_table(style='min-height: 338px;')

              .tabs_content
                div
                  .tr_user_name No
                  .tabs_box
                    .tab_3(style='width: 100%;')
                      div(style='width: 25%;') Name
                      div(style='width: 35%;') Email
                      div(style='width: 25%;') Date registered
                      div(style='width: 15%;') Enabled

                if tabledata
                  each row, i in tabledata
                    div
                      .tr_user_name #{i+1}
                      .tabs_box
                        .tab_3(style='width: 100%;')
                          div(style='width: 25%;') #{row.fullname}
                          div(style='width: 35%;') #{row.email}
                          div(style='width: 25%;') #{row.signupDate}
                          div(style='width: 15%;')
                            if(row.enabled == 1)
                              input.cmn-toggle.cmn-toggle-yes-no(id='cmn-toggle-#{row.id}', type="checkbox", checked)
                            else
                              input.cmn-toggle.cmn-toggle-yes-no(id='cmn-toggle-#{row.id}', type="checkbox")

                            label(for="cmn-toggle-#{row.id}",data-on="Yes",data-off="No")
